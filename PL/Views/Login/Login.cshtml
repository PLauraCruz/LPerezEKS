@model ML.Usuario
@{
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<div class="container">
    <div class="row">
        @*<div class="col-md-6 offset-md-3">
            <div class="card my-5">*@
        <h2 class="text-center text-dark mt-5">Iniciar Sesion</h2>
        <div class="text-center mb-5 text-dark">Ingrese los datos requeridos</div>
        <div class="text-center">
            <img src="http://i.imgur.com/oGUYN9p.jpg" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                 width="200px" alt="profile">
        </div>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="text-center">
                <div class="col">


                    @Html.LabelFor(model => model.Email)
                    <br>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form", @id = "txtEmail" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="col">



                    @Html.LabelFor(model => model.Password)
                    <br>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form", type= "password", @id = "txtPassword"})
                    @Html.ValidationMessageFor(model => model.Password)
                    <br>
                </div>
            </div>
            <br>

            <div class="col">
                <div class="text-center">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-success" />
                </div>
            </div>
        }
        @*<div id="emailHelp" class="form-text text-center mb-5 text-dark">
            Not
            Registered? <a href="#" class="text-dark fw-bold">
                Create an
                Account
            </a>
        </div>*@

    </div>

</div>
