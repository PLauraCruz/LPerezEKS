@model ML.Usuario
@{
    ViewBag.Title = "Getall";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>
<div class="row">
    <div class="col-md-12">
        <h5>Seleccionar un usuario para editarlo o + para agregarlo </h5>
        <hr/>
    </div>
</div>
<div style="float:right;">
    @Html.ActionLink("+","Form","Usuario", htmlAttributes: new {@class="btn btn-success"})
</div>
<br >
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="hidden">IdUsuario</td>
            <td>NombreUsuario</td>
            <td>Email</td>
            <td>UserName</td>
            <td>Sexo</td>
            <td>Telefono</td>
            <td>Eliminar</td>

        </tr>
    </thead>
    <tbody>
        @foreach(ML.Usuario usuario in Model.Usuarios)
            {
                <tr>
                    <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                    <td class="hidden">@usuario.IdUsuario</td>
                    <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.UserName</td>
                    <td>@usuario.Sexo</td>
                    <td>@usuario.Telefono</td>
                    <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario})" onclick="return confirm('Estas seguro que deseas eliminar este usuario');"></a></td>
                </tr>
            }
    </tbody>
</table>

